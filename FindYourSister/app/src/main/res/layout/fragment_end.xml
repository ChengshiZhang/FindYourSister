<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/topFormat"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="120dp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/scoreBackground"
        android:background="@mipmap/scoredisp"
        android:adjustViewBounds="true"
        android:layout_below="@+id/topFormat"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="    "
        android:id="@+id/topFormat2"
        android:textSize="250dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/finalScore"
        android:textSize="50dp"
        android:textIsSelectable="false"
        android:textColor="@color/Black"
        android:textStyle="bold"
        android:layout_above="@+id/highScore"
        android:layout_toRightOf="@+id/topFormat2"
        android:layout_toEndOf="@+id/topFormat2" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/highScore"
        android:textColor="@color/Black"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_above="@+id/bottonFormat"
        android:layout_toRightOf="@+id/topFormat2"
        android:layout_toEndOf="@+id/topFormat2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="   "
        android:id="@+id/bottonFormat"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="128dp" />

</RelativeLayout>